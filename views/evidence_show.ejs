<div class="row yukle-konfirmasyon">
  <% if(message) { %>
  <div class="col-md-4 col-md-offset-3 basari-mesaji"><%= t('tutanakthankyou') %></div>
  <% } %>
</div>
<div class="row social-wid text-center">
  <div class="fb-like col-xs-6 text-center" data-href="http://www.saydirac.com" data-layout="button_count" data-action="like" data-show-faces="true" data-share="true"></div>
  <div class="col-md-3 twitter-position">
    <a class="twitter-share-button" data-lang="en" data-url="http://www.saydirac.com"></a>
    <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="https://platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");
    </script>
 </div>
</div>
<div class="row">
  <div class="col-md-8">
    <h2>
      <%= evidence.city || "(İl)" %> &rarr; <%= evidence.district || "(İlçe)" %> &rarr; <%= t('sandik') %> <%= evidence.no || "(No)" %>
    </h2>
    <h4>
      <%= types.evidence[evidence.type] || "(Tutanak türü)" %>
    </h4>
  </div>

  <div class="col-md-4">
    <a href="/evidences/new">
      <input type="submit" class="btn btn-outline-blue btn-lg btn-block" value="<%= t('tutanakyukle') %>"/>
    </a>
  </div>

  <div class="col-md-12">
    <img class="tutanak img-responsive" src="<%=s3path + evidence.img %>" width="100%">
    <% var date = new Date(evidence.created_at); %>
    <%= date.getHours() %>:<%= date.getMinutes() %>
    <%= date.getDate() %>.<%= date.getMonth()+1 %>.<%= date.getFullYear() %> <%= t('tarihindeeklenmistir') %>
  </div>
  <div class="col-md-12">
    <a class="btn btn-outline-orange btn-sm" href="/evidences">
      <%= t('tumtutanaklar') %>
    </a>
  </div>
</div>
