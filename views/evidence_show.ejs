<div class="row yukle-konfirmasyon">
  <% if(message) { %> 
  <div class="col-md-4 col-md-offset-3 basari-mesaji"><%= t(message) %></div>
  <% } %> 

  <div class="col-md-5 sosyal">
    <ul class="list-inline">
      <li><a href="https://www.facebook.com/saydirac?ref=hl" class="btn-social btn-outline-orange"><i class="fa fa-fw fa-facebook"></i></a>
      </li>
      <li><a href="#" class="btn-social btn-outline-orange"><i class="fa fa-fw fa-google-plus"></i></a>
      </li>
      <li><a href="http://www.twitter.com/saydirac" class="btn-social btn-outline-orange"><i class="fa fa-fw fa-twitter"></i></a>
      </li>
    </ul>
  </div>
</div>
<div class="row">
  <div class="col-md-8">
    <h3 class="">
      <%= evidence.city || "(Şehir)" %> &rarr; <%= evidence.district || "(İlçe)" %> &rarr; Sandık <%= evidence.no || "(No)" %>
    </h3>
    <h5><%= types.evidence[evidence.type] || "(Tutanak tipi)" %></h5>
  </div>
  <div class="col-md-4">
    <a href="/readings/<%= evidence._id %>/new">
      <input type="submit" class="btn btn-outline-orange btn-lg btn-block" value="TUTANAK OKU"/></a>
  </div>
  <div class="col-md-12">
    <img class="tutanak" src="<%=s3path + evidence.img %>" width="100%">
    <% var date = new Date(evidence.created_at); %>
    <%= date.getHours() %>:<%= date.getMinutes() %>
    <%= date.getDate() %>.<%= date.getMonth()+1 %>.<%= date.getFullYear() %> tarihinde eklenmiştir
  </div>
  <div class="col-md-12">
    <a class="btn btn-outline-orange btn-sm" href="/evidences">Tüm Tutanaklar</a>
  </div>
</div>

<div class="row share-widgets">
