<div class="row text-center">
   <div class="col-sm-12">
      <h3 class="title">
        <%= current_event.name %>
      </h3>
  </div>
</div>

<div class="row text-center">
   <div class="col-xs-12">
      <h4>
       % KAC KALDI?
      </h4>
  </div>
</div>

<form id="tutanak" role="form" action="/evidences" method="post" accept-charset="utf-8" enctype="multipart/form-data">
  <input type="hidden" id="event_id" name="event_id" value="<%= current_event._id %>"/>
  <span class="file-input btn btn-outline-blue btn-large btn-block btn-file">
    Tutanak Say<input type="file" id="files" name="image">
  </span>
</form>

 <script type="text/javascript">
    $(document).ready(function(){
      $(".file-input").change(function() {
            $('#tutanak').submit();
            $('#tutanak').spin();
      });

    });
</script>