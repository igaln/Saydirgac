<div class="panel-group" id="accordion">
  <div class='row'>
    <div class="col-xs-2 col-xs-offset-2">
      SANDIKLAR:
    </div>
    <div class="col-xs-2">
      TUTANAK SAYISI:
    </div>
    <div class="col-xs-2">
      OKUMA SAYISI:
    </div>
    <div class="col-xs-2">
      GUNCELLEME:
    </div>
     <div class="col-xs-2">
      ADAYLAR:
    </div>
    
  </div>
  <hr>
  <% progresses.forEach( function(progress){ %>
  <% if (progress.type === "City") { %>
  <div class="">
    <div class='row' style="background-color:rgba(0, 0, 0, 0.4);">
      <div class="col-xs-2">
       <h3><%= progress.name %></h3>
      </div>
      <div style="margin-top:15px;">
        <div class="col-xs-2">
          <%= progress.box_count %>
        </div>
        <div class="col-xs-2">
          <%= progress.evidence_count %>  (%<%= round((progress.evidence_count / progress.box_count) * 100) %>)
        </div>
        <div class="col-xs-2">
          <%= progress.evidence_count %>  (%<%= round((progress.reading_count / progress.box_count) * 100) %>)
        </div>
        <div class="col-xs-2">
          <% var date = new Date(progress.updated_at); %>
          <%= date.getHours() %>:<%= date.getMinutes() %>
          <%= date.getDate() %>.<%= date.getMonth()+1 %>.<%= date.getFullYear() %>
        </div>
         <div class="col-xs-2">
         ADAYLAR
        </div>  
      </div> 
    </div>
    
    <div class='row'>
      
      <div class="col-xs-12">
        <% progresses.forEach( function(progress_district){ %>
        <% if ( String(progress_district.parent) == String(progress._id) ) { %>
        <div class='row' style="background-color:rgba(0, 0, 0, 0.2);">
          <div class="col-xs-2">
            <div class="panel-heading">
              <a data-toggle="collapse" data-parent="#accordion" href="#<%= progress._id %>">
              <%= progress_district.name %><span class="btn panel-state"></span>
              </a>
            </div>
          </div>
          <div style="margin-top:10px;">
           <div class="col-xs-2">
            <%= progress.box_count %>
          </div>
          <div class="col-xs-2">
            <%= progress.evidence_count %>  (%<%= round((progress.evidence_count / progress.box_count) * 100) %>)
          </div>
          <div class="col-xs-2">
            <%= progress.evidence_count %>  (%<%= round((progress.reading_count / progress.box_count) * 100) %>)
          </div>
          <div class="col-xs-2">
            <% var date = new Date(progress.updated_at); %>
            <%= date.getHours() %>:<%= date.getMinutes() %>
            <%= date.getDate() %>.<%= date.getMonth()+1 %>.<%= date.getFullYear() %>
          </div>
           <div class="col-xs-2">
           ADAYLAR
          </div>  
          </div> 
      
          <div id="<%= progress._id %>" class="panel-collapse collapse">
            <div class="panel-body">
              <div class="col-xs-11 col-xs-offset-1">
                <% progresses.forEach( function(progress_box){ %>
                <% if ( String(progress_box.parent) == String(progress_district._id) ) { %>
                <div class='row'>
                  <div class="col-xs-12">
                    <hr>
                    <p><%= progress_box.name %></p>
                  </div>
                </div>
                <% } %>
                <% });  %>
                <!--   end  district check -->
              </div>
            </div>
          </div>
        </div>
        <% } %>
        <% });  %>
        <!--   end  district check -->
      </div>
      </div> <!-- end city row -->
      </div> <!-- end panel -->
      <% } %> <!-- end if city -->
      <% });%>
      <!--  end progresses loop  -->
    </div>